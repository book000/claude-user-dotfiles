{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "10800000"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Bash(*:*)",
      "List(*)",
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "Update",
      "Update(*)",
      "Fetch",
      "Fetch(*)",
      "WebSearch",
      "WebFetch",
      "WebFetch(*)",
      "Bash(mkdir:*)",
      "mcp__serena"
    ],
    "deny": [
      "Bash(git push --no-verify)",
      "Bash(pnpm dev)",
      "Bash(pnpm dev &)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notify/notify-completion-with-embed.sh"
          }
        ]
      }
    ]
  }
}
